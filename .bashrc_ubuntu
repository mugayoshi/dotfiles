export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion
eval "$(starship init bash)"

export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - bash)"

# from Hernan
chgcloud() {
  case "$1" in
  test)
    echo "GCP test"
    gcloud config set project gcp_project
    gcloud container clusters get-credentials test-platform --region=europe-west1-b
    ;;
  qt)
    echo "CGP dev"
    gcloud config set project -platform
    gcloud container clusters get-credentials autopilot-cluster-1 --location=europe-west1
    ;;
  qtprod)
    echo "CGP prod"
    gcloud config set project -platform
    gcloud container clusters get-credentials production-cluster --location=europe-west3
    ;;
  prod)
    echo "GCP production"
    gcloud config set project project-cloudn-1
    gcloud container clusters get-credentials production-platform
    ;;
  stag)
    echo "GCP staging"
    gcloud config set project gcp_project
    gcloud container clusters get-credentials staging --zone europe-southwest1-a
    ;;
  "")
    echo "Usage: chgcloud [test|cr|prod|stag|crprod]"
  esac
}

